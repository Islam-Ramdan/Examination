<Window x:Class="ExaminationSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExaminationSystem"
        mc:Ignorable="d"
        ResizeMode="NoResize" 
        WindowStyle="None" 
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Loaded="Window_Loaded"
        Title="SplashScreen" Height="400" Width="640">
    <Grid>
        <Image Margin="0,0,0,0" Source="SplashScreen.png"/>
        <ProgressBar x:Name="pb_Status" Margin="15,367,15,30" BorderThickness="5" Background="Transparent" Foreground="Black" Minimum="0" Maximum="100"/>

    </Grid>
</Window>

